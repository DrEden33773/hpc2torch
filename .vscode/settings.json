{
    "cSpell.words": [
        "nvcc",
        "Delocate",
        "Guids",
        "infini",
        "Matmul",
        "Metaprogramming",
        "numpy",
        "onnx",
        "Relu",
        "succs",
        "topo",
        "wref",
        "wrefs"
    ],
    "editor.suggest.snippetsPreventQuickSuggestions": false, // clangd 的 snippets 有很多的跳转点，不用这个就必须手动触发 Intellisense 了
    "clangd.arguments": [
        "--all-scopes-completion",
        "--background-index",
        "--compile-commands-dir=build",
        "-j=20",
        "--completion-style=bundled",
        "--header-insertion=iwyu",
        "--pch-storage=memory",
        "--cross-file-rename",
        "--enable-config",
        "--fallback-style=llvm",
        "--pretty",
        "--function-arg-placeholders=false",
        "--header-insertion-decorators",
        "--clang-tidy"
    ],
    "clangd.fallbackFlags": [
        "-pedantic",
        "-Wall",
        "-Wextra",
        "-Wcast-align",
        "-Wdouble-promotion",
        "-Wformat=2",
        "-Wimplicit-fallthrough",
        "-Wmisleading-indentation",
        "-Wnon-virtual-dtor",
        "-Wnull-dereference",
        "-Wold-style-cast",
        "-Woverloaded-virtual",
        "-Wpedantic",
        "-Wshadow",
        "-Wunused",
        "-pthread",
        "-fsanitize=address",
        "-fsanitize=undefined",
        "-std=c++2b",
        "-fopenmp"
    ],
    "clangd.path": "clangd",
}